<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Source Language"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Translation"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sourceRG">

            <RadioButton
                android:id="@+id/rbEngS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English" />

            <RadioButton
                android:id="@+id/rbSpanS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spanish" />

            <RadioButton
                android:id="@+id/rbGermS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="German" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/targetRG">

            <RadioButton
                android:id="@+id/rbSpanT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spanish" />

            <RadioButton
                android:id="@+id/rbGermT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="German" />

            <RadioButton
                android:id="@+id/rbEngT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvTran"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Translation"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/etWrite"
        android:hint="Write something">
    </EditText>

</LinearLayout>